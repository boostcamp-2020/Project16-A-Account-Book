{
  "scripts": {
    "dev": "cd src && nodemon --exec ts-node -r tsconfig-paths/register app.ts",
    "seed": "cd src && NODE_ENV=SEED ts-node -r tsconfig-paths/register seed.ts",
    "unseed": "cd src && NODE_ENV=UNSEED ts-node -r tsconfig-paths/register seed.ts",
    "seed-dev" :"npm run seed && npm run dev",
    "build": "npx webpack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "koa-bodyparser": "^4.3.0",
    "@types/koa": "^2.11.6",
    "koa": "^2.13.0",
    "koa-router": "^10.0.0",
    "mongoose": "^5.10.15",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
